<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
        http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" version="1.0">

    <package>ch.plannr.model</package>

    <entity class="ch.plannr.model.User">
        <named-query name="findAllUsers">
            <query><![CDATA[from User u order by u.lastname]]></query>
        </named-query>
        <named-query name="findByUsername">
            <query><![CDATA[from User u where u.username=:username]]></query>
        </named-query>
    </entity>
    <entity class="ch.plannr.model.Role"></entity>
</entity-mappings>
