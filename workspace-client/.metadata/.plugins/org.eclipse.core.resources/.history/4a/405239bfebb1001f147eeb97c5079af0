<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600"
			   xmlns:comps="comps.*"
			   xmlns:ibm="http://www.ibm.com/xmlns/prod/ilog/elixir/2010" applicationComplete="appComplete()"
			   xmlns:flexlib="http://code.google.com/p/flexlib/">
	
	<fx:Script>
		<![CDATA[
			
			import com.ibm.ilog.elixir.timeline.supportClasses.TickItem;
			
			import mx.formatters.DateFormatter;
			
			private var dateFormatter:DateFormatter = new DateFormatter();
			
			private function tickLabelFunction(tickItem:TickItem):String
			{
				var date:Date = tickItem.value as Date;
				dateFormatter.formatString = "MMM-DD-YYYY";
				return dateFormatter.format(date);
			}
			
			private function tickLabelFunction2(tickItem:TickItem):String
			{
				var date:Date = tickItem.value as Date;
				dateFormatter.formatString = "DD-YYYY";
				return dateFormatter.format(date);
			}
		]]>
	</fx:Script>
	

	
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
	<ibm:HTimeline width="100%" height="100%"
				   minTime="{new Date(1999, 11, 21)}"
				   maxTime="{new Date(2000, 1, 1)}"
				   overviewStartTime="{new Date(2000, 0, 5)}"
				   overviewEndTime="{new Date(2000, 0, 25)}"
				   majorTickTimeUnit="day"
				   overviewMinorTickTimeUnit="day"
				   minDurationTimeUnit="day"
				   startTime="{new Date(2000, 0, 10)}"
				   endTime="{new Date(2000, 0, 20)}"
				   tickLabelFunction="{tickLabelFunction}" >
		<s:ArrayList>
			<fx:Object label="Event 1" date="2000/1/1" />
			<fx:Object label="Event 2" date="2000/1/2" />
			<fx:Object label="Event 3" date="2000/1/28" />
			<fx:Object label="Event 4" date="2000/1/11" />
			<fx:Object label="Event 5" date="2000/1/22" />
		</s:ArrayList>
	</ibm:HTimeline>
</s:Application>
