package ch.plannr.model
{
	
	[Bindable]
	public class Vacation
	{
		
		private var _summary:String = "";
		private var _description:String="";
		private var _startTime:Date = null;
		private var _endTime:Date = null;
		public function Vacation()
		{
		}
		
		public function get startTime():Date
		{
			return _startTime;
		}

		public function get endTime():Date
		{
			return _endTime;
		}
		
		public function set startTime(value:Date):void
		{
			_startTime= value;
		} 

		public function set endTime(value:Date):void
		{
			_endTime= value;
		} 
		
		public function toEventXml():XML{
			var addedItem:XML= <event/>;                                                             
			addedItem.@startTime = startTime;              
			addedItem.@endTime = endTime;
			addedItem.@summary = summary;
			addedItem.@description = "";
			return addedItem;
		}
	}
}