	<fx:Script>
		<![CDATA[
			import ch.plannr.core.Context;
			import ch.plannr.event.CustomEvent;
			import ch.plannr.event.UserLoginEvent;
			import ch.plannr.event.UserRegisterEvent;
			import ch.plannr.model.User;
			
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.rpc.events.ResultEvent;
			
			private function cancel():void{
				lMessage.text="";
				tiEmail.text="";
				tiPassword.text="";
			}
			private function tryLogin():void{
				var event : UserLoginEvent = new UserLoginEvent(tiEmail.text,tiPassword.text);
				dispatchEvent(event);
			}
			
			[Mediate( event="Events.LOGIN_SUCCESS")]
			public function handle_registration_success():void{
				
				
			}
			
			[Mediate( event="Events.LOGIN_FAILURE")]
			public function handle_registration_failure():void{
				lMessage.text="Email and/or password are not valid.";
				tiEmail.text="";
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		
	</fx:Declarations>
	<mx:Form width="100%" height="100%">
		<s:Label text="Please login to www.plannr.ch"/>
		<mx:FormItem label="email address">
			<s:TextInput id="tiEmail" text="raffael.schmid@plannr.ch"/>
		</mx:FormItem>
		<mx:FormItem label="password">
			<s:TextInput id="tiPassword" displayAsPassword="true" text="plannr"/>
		</mx:FormItem>
		<mx:FormItem>
			<s:HGroup>
				<s:Button label="Login" click="tryLogin()"/><s:Button label="Cancel" click="cancel()"/>
			</s:HGroup>
		</mx:FormItem>
		<mx:Spacer height="10"/>
		<s:Label id="lMessage" text=""/>
	</mx:Form>
