<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:ibm="http://www.ibm.com/xmlns/prod/ilog/elixir/2010"
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             useChromeColor="true">
  
  <fx:Metadata>
    <![CDATA[ 
    /** 
     * A strongly-typed property that references the component to which this skin is applied.
     */    
    [HostComponent("com.ibm.ilog.elixir.timeline.components.TimelineGrid")]
    ]]>
  </fx:Metadata>    
  
  <fx:Script fb:purpose="styling">
    <![CDATA[
      import mx.core.IVisualElement;
      
      /**
       *  @private
       */
      override protected function updateDisplayList(unscaledWidth:Number, 
                                                    unscaledHeight:Number) : void
      {
        if (hostComponent.axis != null && hostComponent.getStyle("alternatingCellColors")) {
          var cell:IVisualElement;
          var count:int = hostComponent.axis.majorTicks != null ? hostComponent.axis.majorTicks.length - 1 : 0; 
          for (var i:int = 0; i < count; i++) {
            // for each cell adapt color
            cell = hostComponent.getCellElement(i);
            cell["cellColor"].color = hostComponent.getAlternatingCellColor(cell);
          }
        }
        super.updateDisplayList(unscaledWidth, unscaledHeight);
      }
    ]]>
  </fx:Script>
  
  <fx:Declarations>
    <!--- @private -->
    <fx:Component id="majorLinePart">
      <s:Line xFrom="0" xTo="0" yFrom="0" yTo="100">
        <s:stroke>
          <s:SolidColorStroke color="0x000000" weight="1" caps="none"/>
        </s:stroke>
      </s:Line> 
    </fx:Component>
    <!--- @private -->
    <fx:Component id="minorLinePart">                  
      <s:Line xFrom="0" xTo="0" yFrom="0" yTo="100">
        <s:stroke>          
          <s:SolidColorStroke color="0xBBBBBB"/>
        </s:stroke>        
      </s:Line>          
    </fx:Component>
    <!--- @private -->
    <fx:Component id="cellPart">               
      <s:Rect>
        <s:fill>
          <!--- @private -->
          <s:SolidColor color="0xCCCCCC" id="cellColor" alpha="0.3"/>
        </s:fill>
      </s:Rect>
    </fx:Component>    
  </fx:Declarations>
  
  <!--- @private -->
  <s:Group id="contentGroup" width="100%" height="100%">
    <s:layout>
      <ibm:TimelineGridLayout majorBottomOrRightPadding="50"/>
    </s:layout>
  </s:Group>
</s:SparkSkin>
