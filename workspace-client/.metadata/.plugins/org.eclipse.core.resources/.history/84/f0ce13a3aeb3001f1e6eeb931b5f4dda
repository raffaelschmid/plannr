<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent label="Register" width="100%" height="100%"  
					xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:registerservice="ch.plannr.client.services.registerservice.*" xmlns:datatypes="ch.plannr.client.datatypes.*" xmlns:mate="http://mate.asfusion.com/">
	<fx:Script>
		<![CDATA[
			import ch.plannr.core.Context;
			import ch.plannr.event.UserRegisterEvent;
			import ch.plannr.model.User;
			
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.rpc.events.ResultEvent;
			
			private var userToRegister:User = new User();
			
			
			private function tryRegister():void{
				var event : UserRegisterEvent = new UserRegisterEvent(userToRegister);
				dispatchEvent(event);
			}
			
			private function cancel():void{
				lMessage.text="";
				tiFirstName.text="";
				tiLastname.text="";
				tiEmail.text="";
				tiPassword.text="";
				tiConfirmpassword.text="";
			}
			
			[Mediate( event="Events.REGISTRATION_SUCCESS")]
			public function handle_registration_success():void{
				lMessage.text="You successfully registered and will get an activation-email soon.";
				tiFirstName.enabled=false;
				tiLastname.enabled=false;
				tiEmail.enabled=false;
				tiPassword.enabled=false;
				tiConfirmpassword.enabled=false;
				bRegister.enabled=false;
				bCancel.enabled=false;
			}

			[Mediate( event="Events.REGISTRATION_FAILURE")]
			public function handle_registration_failure():void{
				lMessage.text="The email has already been registered.";
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		
	</fx:Declarations>
	
	
	<mx:Form width="100%" height="100%" defaultButton="{bRegister}">
		<mx:FormItem label="email address">
			<s:TextInput id="tiEmail" text="{userToRegister.email}"/>
		</mx:FormItem>
		<mx:FormItem label="first name">
			<s:TextInput id="tiFirstName" text="{userToRegister.firstname}"/>
		</mx:FormItem>
		<mx:FormItem label="last name">
			<s:TextInput id="tiLastname" text="{userToRegister.lastname}"/>
		</mx:FormItem>
		<mx:FormItem label="password">
			<s:TextInput id="tiPassword" text="{userToRegister.password}" displayAsPassword="true"/>
		</mx:FormItem>
		<mx:FormItem label="confirm password">
			<s:TextInput id="tiConfirmpassword" text="plannr" displayAsPassword="true"/>
		</mx:FormItem>
		<mx:FormItem>
			<s:HGroup>
				<s:Button id="bRegister" label="Register" click="tryRegister()"/><s:Button id="bCancel" label="Cancel" click="cancel()"/>
			</s:HGroup>
		</mx:FormItem>
		<mx:Spacer height="10"/>
		<s:Label id="lMessage" text=""/>
	</mx:Form>	
</s:NavigatorContent>
