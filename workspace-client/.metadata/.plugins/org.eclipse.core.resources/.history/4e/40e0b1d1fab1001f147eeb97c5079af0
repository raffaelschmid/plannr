<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" layout="vertical" horizontalAlign="center" verticalGap="5"
          title="@Resource(bundle='calendarsample', key='calendarsample.editing.confirm.dialog.title')"
          paddingLeft="10" paddingRight="10" paddingTop="10">

  <mx:Script>
    <![CDATA[
      import mx.controls.Alert;
      import mx.events.CloseEvent;
      
      public var editSerie:Boolean = true;           
      
      public function radioGroupChanged():void {
        editSerie  = radioGroup.selectedValue == "radio1";
      }     
      
      private function okHandler():void {         
        dispatchEvent(new CloseEvent(CloseEvent.CLOSE, false, false, Alert.OK));
      } 
      
      private function cancelHandler():void {         
        dispatchEvent(new CloseEvent(CloseEvent.CLOSE, false, false, Alert.CANCEL));
      }
      
      public function reset():void {
        if (radio1) {
          radioGroup.selectedValue = radio1.value;
          editSerie = true;
        }
      }
      
    ]]>
  </mx:Script>

  <mx:RadioButtonGroup id="radioGroup" change="radioGroupChanged()" />
  
  <mx:VBox>
          
    <mx:RadioButton id="radio1" value="radio1" groupName="radioGroup" selected="true"
                     label="@Resource(bundle='calendarsample', key='calendarsample.editing.confirm.dialog.modifySerie')" />
                     
    <mx:RadioButton id="radio2" value="radio2" groupName="radioGroup"
                    label="@Resource(bundle='calendarsample', key='calendarsample.editing.confirm.dialog.modifyOccurrence')" />                 
  </mx:VBox>                  

  <mx:HBox paddingTop="15">
  
    <mx:Button id="okButton" 
               label="@Resource(bundle='calendarsample', key='calendarsample.dialog.button.ok')" 
               click="okHandler()"/>
               
    <mx:Button id="cancelButton" 
               label="@Resource(bundle='calendarsample', key='calendarsample.dialog.button.cancel')" 
               click="cancelHandler()"/>
  </mx:HBox>
  
</mx:Panel>
