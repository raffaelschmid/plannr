<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600" 
			   xmlns:comps="comps.*" 
			   xmlns:ibm="http://www.ibm.com/xmlns/prod/ilog/elixir/2010" 
			   xmlns:flexlib="http://code.google.com/p/flexlib/">
	<fx:Script>
		<![CDATA[
			import com.ibm.ilog.elixir.timeline.supportClasses.TickItem;
			import mx.formatters.DateFormatter;
			
			private var dateFormatter:DateFormatter = new DateFormatter();
			
			private function tickLabelFunction(tickItem:TickItem):String
			{
				var date:Date = tickItem.value as Date;
				//dateFormatter.formatString = "MMM-DD-YYYY";
				dateFormatter.formatString = "MMM-DD-YYYY HH:NN:SS.QQQ"
				//return dateFormatter.format(date);
				var dateVal:String = dateFormatter.format(date);
				trace(dateVal);
				return dateVal;
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>  
	
	<ibm:HTimeline  width="100%" height="100%"
					minTime="{new Date(2000, 0, 1)}" 
					maxTime="{new Date(2010, 0	, 1)}"
					overviewStartTime="{new Date(2000, 0, 1)}" 
					overviewEndTime="{new Date(2010, 1, 1)}"
					startTime="{new Date(2000, 0, 1)}" 
					endTime="{new Date(2001, 0, 1)}"
					minorTickTimeStep="250"
					minorTickTimeUnit="day"
					overviewMinorTickTimeStep="25"
					overviewMinorTickTimeUnit="day"
					minDurationTimeUnit="day"
					tickLabelFunction="{tickLabelFunction}">
		
		<s:ArrayList>
			<fx:Object label="Event 1" date="2000/1/1" />
			<fx:Object label="Event 2" date="2000/1/2" />
			<fx:Object label="Event 3" date="2000/1/3" />
