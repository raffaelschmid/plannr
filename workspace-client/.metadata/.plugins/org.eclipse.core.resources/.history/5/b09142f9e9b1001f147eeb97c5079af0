			<fx:Object label="Event 5" date="2000/1/1" />
			<fx:Object label="Event 6" date="2000/1/1" />
			<fx:Object label="Event 7" date="2000/1/1" />
			<fx:Object label="Event 8" date="2000/1/1" />
		</s:ArrayList>   
	</ibm:HTimeline>
</s:Application>
