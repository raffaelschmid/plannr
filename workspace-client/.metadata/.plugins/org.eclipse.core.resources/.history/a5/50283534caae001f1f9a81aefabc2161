package ch.plannr.client.core
{
	public class Context
	{
		private static var instance:Context = new Context();
		public function Singleton() {
		}
		public static function getInstance():Singleton {
			return Singleton.instance;
		}
		
		var _currentUser:User = null;
		
		[Bindable(event="propertyChange")]
		public function get password() : String
		{
			return _currentUser;
		}
		
		public function set currentUser(value:String) : void
		{
			var oldValue:String = _currentUser;
			if (oldValue !== value)
			{
				_currentUser = value;
				this.dispatchEvent(mx.events.PropertyChangeEvent.createUpdateEvent(this, "currentUser", oldValue, _internal_password));
			}
		}
	}
}